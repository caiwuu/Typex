html, body
  overflow hidden
  overflow-y auto
.icon
  width 1.2em
  height 1.2em
  vertical-align -0.15em
  fill currentColor
  overflow hidden
#editor-content
  word-break break-all
#editor-content:focus, .custom-input:focus
  outline none
.custom-input
  top -100px
  left 0
  position absolute
  pointer-events none
  width 2px
  background transparent
  border none
  padding 0
.custom-input
  opacity 0
  caret-color transparent
  color transparent
.custom-input-iframe
  top -100px
  left 0
  background transparent
  color transparent
  width 10px
  height 0px
  pointer-events none
  border none
  caret-color transparent
  /* display: none; */
.custom-caret
  top -100px
  left 0
  pointer-events none
  position absolute
  width 2px
  border none
  padding 0
  /* user-select: none; */
  display block
  animation caret 1s infinite 0.5s steps(1, start)
@keyframes static-caret
  0%
    opacity 1
  100%
    opacity 1
@keyframes caret
  0%
    opacity 1
  50%
    opacity 0
  100%
    opacity 1
#editor-content ::selection
  background rgb(186, 210, 250)
#editor-content .editor-disabled
  user-select none
// test
.hue
  font-size 0
  float left
  height 200px
  width 10px
  background linear-gradient(to bottom, red, #ff0, lime, cyan, blue, #f0f, red)
.palette
  float left
  width 200px
  height 200px
.hue-picker
  display inline-block
  position relative
  width 12px
  height 12px
  border-radius 6px
  transform translate(-1px, -6px)
  background-color rgb(248, 248, 248)
  box-shadow rgba(0, 0, 0, 0.37) 0px 1px 4px 0px
.palette-picker
  display inline-block
  position relative
  width 12px
  height 12px
  border-radius 6px
  box-shadow rgb(255 255 255) 0px 0px 0px 1px inset
  transform translate(-6px, -6px)
